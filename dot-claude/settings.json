{
  "permissions": {
    "allow": [
      "Read(~/Repositories/agent-core/)",
      "Read(~/Repositories/lahzo-integrations/)",
      "Read(~/Repositories/dotfiles/)",
      "Read(~/Repositories/ui-core/)",
      "Read(~/Repositories/infra/)",
      "Read(~/Justfile)",
      "Write(~/Justfile)",
      "Read(~/.zshrc)",
      "Bash(tree:*)",
      "Bash(jira list *)",
      "WebSearch",
      "WebFetch",
      "Skill(global-installer)",
      "Skill(github)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \"$CLAUDE_PROJECT_DIR/.claude/hooks/post-edit.sh\" ]; then data=$(cat); \"$CLAUDE_PROJECT_DIR/.claude/hooks/post-edit.sh\" \"$(echo \"$data\" | jq -r '.tool_input.file_path // \"\"')\" \"$(echo \"$data\" | jq -r '.tool_response.success // false')\"; else echo \"No post edit script found!\"; fi"
          }
        ]
      },
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "data=$(cat); ~/.claude/hooks/notifications/notify.sh \"$(echo \"$data\" | jq -r '.tool_name // \"unknown\"')\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "data=$(cat); ~/.claude/hooks/notifications/notify.sh \"$(echo \"$data\" | jq -r '.tool_name // \"unknown\"')\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "data=$(cat); ~/.claude/hooks/notifications/notify.sh \"$(echo \"$data\" | jq -r '.hook_event_name // \"Stop\"')\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
