{
  "permissions": {
    "allow": [
      "Read(~/Repositories/agent-core/)",
      "Read(~/Repositories/lahzo-integrations/)",
      "Read(~/Repositories/dotfiles/)",
      "Read(~/Repositories/ui-core/)",
      "Read(~/Repositories/infra/)",
      "Read(~/Justfile)",
      "Write(~/Justfile)",
      "Read(~/.zshrc)",
      "Bash(tree:*)",
      "WebSearch",
      "WebFetch",
      "Skill(global-installer)",
      "Skill(github)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop-notification/notify.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
